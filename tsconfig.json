{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "dom.iterable"],
    "jsx": "react",
    "removeComments": true,
  },
  "exclude": ["node_modules"]
}